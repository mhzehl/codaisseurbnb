<div class="container room">

<% if current_user != @room.user %>
  <div class="panel panel-primary">
    <div class="panel-heading">Book this room</div>

    <div class="panel-body">
      <%= render 'bookings/form' %>
    </div>
  </div>
<% end %>

  <div class="panel panel-primary">
    <div class="panel-heading"><%= @room.listing_name %></div>

    <div class="panel-body">

      <p>Address: <%= @room.address %></p>
      <p>Host: <%= @room.user.email %></p>

      <hr>

      <!-- Main Info -->
      <h4>Main Info</h4>
      <p>Home Type:</p>
      <ul>
        <li><%= @room.home_type %></li>
      </ul>
      <p>Number of guests:</p>
      <ul>
        <li><%= @room.accommodate %></li>
      </ul>
      <p>Rooms:</p>
      <ul>
        <li><%= @room.bedroom_count %> <%= @room.bedroom_count > 1 ? "Bedrooms" : "Bedroom" %></li>
        <li><%= @room.bathroom_count %> <%= @room.bathroom_count > 1 ? "Bathrooms" : "Bathroom" %></li>
      </ul>

      <hr>

      <!-- About -->
      <h4>About</h4>
      <p><%= @room.description %></p>

      <hr>

      <!-- Amenities -->
      <h4>Amenities</h4>
      <ul class="amenities">
        <li><%= !@room.has_tv ? ("<s>TV</s>").html_safe : "TV" %></li>
        <li><%= !@room.has_kitchen ? ("<del>Kitchen</del>").html_safe : "Kitchen" %></li>
        <li><%= !@room.has_internet ? ("<del>Internet</del>").html_safe : "Internet" %></li>
        <li><%= !@room.has_heating ? ("<del>Heating</del>").html_safe : "Heating" %></li>
        <li><%= !@room.has_airco ? ("<del>Air Conditioning</del>").html_safe : "Air Conditioning" %></li>
      </ul>

      <hr>

      <!-- Photos -->
      <h4>Photos</h4>
      <% @room.photos.each do |photo| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= image_tag photo.image.thumbnail %>
        </div>
      </div>
      <% end %>

      <hr>

      <!-- Themes -->
      <h4>Themes</h4>
      <% @themes.each do |theme| %>
        <span class="label label-success"><%= theme.name %></span>
      <% end %>

    </div>

  </div>

  <%= link_to "Back", rooms_path, class: "btn btn-default" %>

</div>
